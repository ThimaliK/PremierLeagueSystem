# Routes
# This file defines all application routes


GET /api/footballclubs                      controllers.FootballClubController.allClubs

GET /api/matches                            controllers.MatchController.allMatches

GET /api/footballclubs/sortedbypoints       controllers.FootballClubController.allClubs

GET /api/footballclubs/sortedbywins         controllers.FootballClubController.clubsSortedByWins

GET /api/footballclubs/sortedbygf           controllers.FootballClubController.clubsSortedByGF

GET /api/createdmatch                       controllers.MatchController.createdMatch

GET /api/matches/:date                      controllers.MatchController.matchesByDate(date: String)

